<%- include ('partials/header.ejs'); %> 
<body>
    <%- include('partials/navBar.ejs'); %>
    
    <div class="container">
        <hr>
        <h1><%= pergunta.title %></h1>
        <p><%= pergunta.description  %> </p>
        <hr>
        <form method="POST" action="/responder">
            <label for="">Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo">Digite</textarea><br>
            <input name="pergunta"  type="hidden" value="<%= pergunta.id  %> " />
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo  %></p>
                </div>
            </div>
            
       <% }) %> 
    </div>
</body>
<%- include ('partials/footer.ejs'); %> 